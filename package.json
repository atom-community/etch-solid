{
  "name": "etch-solid",
  "main": "dist/index.js",
  "version": "0.1.0",
  "author": "Amin Yahyaabadi",
  "description": "fast DOM library - etch with solid backend",
  "keywords": [
    "etch",
    "solid",
    "solidjs",
    "dom",
    "view",
    "element",
    "custom-elements",
    "atom",
    "electron",
    "react",
    "vue"
  ],
  "repository": "https://github.com/atom-ide-community/etch-solid",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "test": "npm run mocha",
    "mocha": "electron-mocha test --renderer --recursive --require @babel/register",
    "tdd": "electron-mocha test --renderer --recursive --interactive --require @babel/register",
    "clean": "shx rm -rf dist",
    "tsc": "tsc -p src/tsconfig.json || echo done",
    "dev": "npm run clean && cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=true rollup -c -w",
    "build": "npm run clean && cross-env NODE_ENV=production cross-env BABEL_KEEP_MODULES=true rollup -c ",
    "build-commit": "build-commit -o dist",
    "bump": "ncu -u -x coffeescript",
    "prepare": "npm run build"
  },
  "dependencies": {
    "babel-preset-solid": "0.23.4",
    "solid-js": "0.23.4",
    "solid-styled-jsx": "0.23.4",
    "styled-jsx": "3.3.2"
  },
  "devDependencies": {
    "@types/atom": "1.40.14",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tslib": "^2.0.3",
    "coffeescript": "^2.0.0",
    "prettier": "^3.0.0",
    "eslint": "8.51.0",
    "eslint-config-atomic": "^1.5.1",
    "rollup": "4.1.4",
    "rollup-plugin-atomic": "^3.0.0",
    "shx": "0.3.4",
    "cross-env": "7.0.3",
    "npm-check-updates": "16.14.6",
    "build-commit": "0.1.4",
    "@babel/core": "^7.12.10",
    "@babel/cli": "^7.12.10",
    "babel-preset-atomic": "^5.0.0",
    "@babel/register": "^7.12.10",
    "chai": "^4.2.0",
    "electron": "^27.0.0",
    "electron-mocha": "^12.0.0",
    "estraverse-fb": "^1.3.2",
    "mocha": "^10.0.0",
    "random-seed": "^0.3.0"
  }
}
