{
  "name": "etch-solid",
  "main": "dist/main.js",
  "version": "0.1.0",
  "author": "Amin Yahyaabadi",
  "description": "fast DOM library - etch with solid backend",
  "keywords": [
    "etch",
    "solid",
    "solidjs",
    "dom",
    "view",
    "element",
    "custom-elements",
    "atom",
    "electron",
    "react",
    "vue"
  ],
  "repository": "https://github.com/atom-ide-community/etch-solid",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "test": "atom --test spec",
    "clean": "shx rm -rf dist",
    "tsc": "tsc -p src/tsconfig.json || echo done",
    "dev": "npm run clean && cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=true rollup -c -w",
    "build": "npm run clean && cross-env NODE_ENV=production cross-env BABEL_KEEP_MODULES=true rollup -c ",
    "build-commit": "build-commit -o dist",
    "bump": "ncu -u -x coffeescript",
    "prepare": "npm run build"
  },
  "atomTestRunner": "./spec/runner",
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "dependencies": {
    "solid": "latest"
  },
  "devDependencies": {
    "@types/atom": "1.40.4",
    "@types/node": "^14.6.0",
    "typescript": "^3.9.7",
    "tslib": "^2.0.1",
    "coffeescript": "^1.12.7",
    "@types/jasmine": "^3.5.12",
    "atom-jasmine3-test-runner": "^5.0.5",
    "prettier": "^2.0.5",
    "eslint": "7.7.0",
    "eslint-config-atomic": "^1.4.0",
    "rollup": "2.26.4",
    "rollup-plugin-atomic": "^1.2.0",
    "shx": "0.3.2",
    "cross-env": "7.0.2",
    "npm-check-updates": "7.1.1",
    "build-commit": "0.1.1"
  }
}
